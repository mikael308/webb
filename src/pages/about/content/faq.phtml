$xml = simplexml_load_file("../res/faq.xml") 
    or die("could not load faq");

$accordionWidget = \Web\Framework\Factory\Widgets::create('accordion');
foreach ($xml->children() as $faq) 
{
    $accordionWidget->addAccordion(
        $faq->question,
        $faq->answer
    );    
}
?>

<div id="faq">
    <?php \Web\Framework\Factory\Widgets::output($accordionWidget); ?>
</div>
